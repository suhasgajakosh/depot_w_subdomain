<!DOCTYPE html>
<html>
<head>
 	<title>Product Project Demo</title>
  	
  	<%= stylesheet_link_tag "application", :media => "all" %>
  	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tag %>
</head>

<body id= "store">
	<div id="banner">
		<%= image_tag("/images/suhas.png")%>
		<%= @page_title || "Project Demo" %>
	</div>

	<div id= "columns">
		<div id= "side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
					<%= render @cart %>
				<% end %>
			<% end %>

			<a href= "http://localhost:3000">Home</a><br />
			<a href= "http://www...../faq">Question</a><br />
			<a href= "http://www...../news">News</a><br />
			<a href= "http://www...../about_us">About Us</a><br />
		</div>

		<% if session[:user_id] %>
			<br />

			<%= link_to 'Orders', orders_path %> <br />
			<%= link_to 'Products', products_path %> <br />
			<%= link_to 'Users', users_path %> <br />
			<br />

			<%= button_to 'Logout', logout_path, :method => :delete %>
		<% end %>
	</div>
		<div id= "main">
		<%= yield %>
	</div>
	
</body>

</html>
